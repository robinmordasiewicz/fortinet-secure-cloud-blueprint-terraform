#cloud-config
config sys interface
  edit port1
    set alias external
    set mode static
    set ip 10.0.1.4 255.255.255.0
    set allowaccess ping ssh https
  next
  edit port2
    set alias dmz
    set mode static
    set ip 10.0.2.4 255.255.255.0
    set allowaccess ping
  next
end

config system route
  edit 1
  set device port1
  set gateway 10.0.1.1
end

config sys dns
  set primary 8.8.8.8
  unset secondary
end

config system ntp
  set type custom
  set ntpsync enable
  config ntpserver
    edit 1
      set server 0.ca.pool.ntp.org
    next
    edit 2
      set server 1.ca.pool.ntp.org
    next
    edit 3
      set server 2.ca.pool.ntp.org
    next
    edit 4
      set server 3.ca.pool.ntp.org
    next
  end
end

config sys global
  set hostname fortigate
end

config firewall vip
  edit "virtual-server-http"
    set type server-load-balance
    set extip 10.0.1.100
    set extintf "port1"
    set server-type http
    set http-redirect enable
    set ldb-method round-robin
    set extport 80
    end
  next
end

config firewall vip
    edit "VIP"
        set extip 10.0.1.100
        set extintf "port1"
        set portforward enable
        set mappedip 10.0.2.100
        set extport 443
        set mappedport 443
    next
end

config firewall policy
    edit 1
        set name "Nat"
        set nat enable
        set ippool disable
        set fixedport disable
    next
end

